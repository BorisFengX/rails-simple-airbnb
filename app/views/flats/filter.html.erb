<div class="header">
  <h3><%= link_to "Simple Airbnb", flats_path %></h3>

  <form action="/flats/filter" class="form-inline">
    <input type="string" class="form-control" name="name">
    <input type="submit" class="form-control btn-primary" value="Search">
    <%= link_to "Add Flat", new_flat_path %>
  </form>

