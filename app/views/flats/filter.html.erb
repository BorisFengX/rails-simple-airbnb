  </ul> -->
</div>
<h1>Searched Flats</h1>

<div class = "content-container">
  <div class="cards">
    <div class="row">
      <% @flats.each do |flat| %>
        <div class = "col-xs-12 col-sm-6 col-md-4">
          <div class="card">
            <div class="card-banner"></div>
            <div class="card-content">
              <h2><%= flat.name %></h2>
              <p><%= flat.address %></p>
              <ul class="list-inline">
                <li><%= flat.number_of_guests %></li>
                <li><%= flat.price_per_night %></li>
              </ul>
            </div>

            <div class="card-footer">
              <ul class="list-inline">
                <li><%= link_to "More info", flat_path(flat) %></li>
                <li><%= link_to "Edit", edit_flat_path(flat) %></li>
                <li><%= link_to "Remove", flat_path(flat), method: :delete,
                data: { confirm: "Are you sure?" } %></li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



